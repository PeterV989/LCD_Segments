<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LCD_Segments.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LCD_Segments"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LCD_Segments">
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Loaded="OnLoaded">
        <!--<Canvas x:Name="DesignCanvas" Width="40" Height="80" Background="Black" >
            <Polygon x:Name="TopSegment" Stroke="White" StrokeThickness="1" Fill="White" />
        </Canvas>-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Padding="5">Width:</TextBlock>
            <Slider x:Name="SliderWidth" Minimum="9" Maximum="31"
                    Width="100" StepFrequency="1" Value="9"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Grid.Row="0" Grid.Column="1"/>
            <TextBlock x:Name="WidthSliderValue" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"
                       Text="{Binding ElementName=SliderWidth, Path=Value, Mode=OneWay,
                            Converter={StaticResource ValueToText}, ConverterParameter='0'}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Padding="5">Height</TextBlock>
            <Slider x:Name="SliderHeight" Minimum="3" Maximum="9"
                    Width="100" StepFrequency="2" SmallChange="2" Value="3"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Grid.Row="1" Grid.Column="1"/>
            <!--<TextBlock x:Name="HeightSliderValue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"
                       Text="{Binding ElementName=SliderHeight, Path=Value, Mode=OneWay,
                            Converter={StaticResource ValueToText}, ConverterParameter=\{0\}}"/>-->

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Padding="5">Slant</TextBlock>
            <Slider x:Name="SliderSlant" Minimum="0" Maximum="10" 
                    Width="100" StepFrequency="1" Value="0"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Grid.Row="2" Grid.Column="1"/>
            <!--<TextBlock x:Name="SlantSliderValue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"
                       Text="{Binding ElementName=SliderSlant, Path=Value, Mode=OneWay,
                            Converter={StaticResource ValueToText}, ConverterParameter=\{0\}}"/>-->
        </Grid>
    </StackPanel>
</Window>
